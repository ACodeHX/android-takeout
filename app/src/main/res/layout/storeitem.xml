<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/store_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/store_img"
        app:layout_constraintTop_toTopOf="@+id/store_img"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/store_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/store_img"
        app:layout_constraintTop_toBottomOf="@+id/store_name"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/store_evaluate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/store_img"
        app:layout_constraintTop_toBottomOf="@+id/store_price"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/deliveryTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/store_img"
        app:layout_constraintTop_toBottomOf="@+id/store_evaluate"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/store_img"
        android:layout_width="54dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
